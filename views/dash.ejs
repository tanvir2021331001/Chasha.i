                </div>
                <div class="nav-buttons">
                    <%- include("layout/loginOutUser") %>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Dashboard -->
    <div class="dashboard-container">
        <div class="dashboard-card">
            <!-- Profile Section -->
            <div class="profile-section">
                <div class="profile-image">
