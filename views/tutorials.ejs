<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chasha.i - Tutorials</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/tutorial.css">
    <link rel="stylesheet" href="css/chatAI.css">
    <script src="js/chatAI.js"></script>
</head>
<body>
    <!-- Header -->
     <!--/* copied from home nav */-->
    <header class="header">
        <div class="containerNav">
            <nav class="nav">
                <a href="#" class="logo">
                    <span class="logo-text">Chasha.i</span>
                </a>
                <div class="nav-links">
                    
                    <a href="/home">Home</a>
                    <a href="/marketPlace">Marketplace</a>
                    <a href="/tutorial" style="font-weight: bold; color: #16a34a;">Tutorials</a>
                    <a href="/weather">Weather</a>
                    <a href="/blog">Blog</a>
                    <a href="/agridoc">AgriDoctor</a>
                </div>
                <div class="nav-buttons">
                    <%- include("layout/loginOutUser") %>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section">
            <h1 class="hero-title">Agricultural Tutorials</h1>
            <p class="hero-description">
                Learn from expert farmers and agricultural specialists through our comprehensive video tutorials
            </p>
            <div class="search-container">
                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
                </svg>
                <input type="text" class="search-input" placeholder="Search tutorials..." id = "search"/>
            </div>
        </div>

        <%- include("layout/chatAI") %>

        <!-- Tutorial Grid -->
        <div class="tutorial-grid" id = "tutorialGrid"></div>
        <div id = "noResults">
            <p>No Result Found</p>
        </div>

        <div class="add-section">
            <a href="/tutorialsAdd" class="add-button">Add Tutorial</a>
        </div>
    </div>
     <script>
        const tutorials = <%- JSON.stringify(tutorials) %>;
</script>
    <script src="/js/tutorial.js"></script>
    <%- include("layout/footer") %>
</body>
</html>
